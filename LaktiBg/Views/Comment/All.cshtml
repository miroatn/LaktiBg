@model List<CommentViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Всички коментари</title>
</head>
<body>
    <h1>Всички коментари</h1>

        @foreach (var comment in Model)
        {
            <div class="row d-flex justify-content-center">
              <div class="col-md-8 col-lg-6">
                <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                  <div class="card-body p-4">
                    <div class="card mb-4">
                      <div class="card-body">
                        <p>@comment.Text</p>

                        <div class="d-flex justify-content-between">
                          <div class="d-flex flex-row align-items-center">
                                <img src="~/Images/user.png" alt="avatar" width="25"
                              height="25" />
                            <p class="small mb-0 ms-2">@comment.AuthorName</p>
                          </div>
                               <div class="d-flex flex-row align-items-center" >
                                   @if (User.Id() == comment.AuthorId)
                                        {
                                         <a asp-controller="Comment" asp-action="Delete" asp-route-id="@ViewBag.EventId" class="btn btn-primary"
                                            method="post" style="background-color: transparent; border: 0; padding: 0;">
                                         <img src="~/Images/trashcan.png" alt="Delete Comment" width="15" height="20"
                                        style="background-color: transparent; " /></a>
                                        }
                                <p class="small text-muted mb-0"></p>
                              </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
        }

<div class="row justify-content-center">
    <div class="col-auto">
        <a asp-controller="Comment" asp-action="Add" asp-route-id="@ViewBag.EventId" class="btn btn-primary" method="post">Добави коментар</a>
    </div>

</div>
</body>
</html>

